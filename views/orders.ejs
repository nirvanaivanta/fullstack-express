<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pesanan - Marketplace Sederhana</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f4f4f9;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    .order-card {
      background-color: #fff;
      padding: 1rem;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      display: flex;
      align-items: center;
      margin-bottom: 1rem;
    }

    .order-card img {
      max-width: 100px;
      height: auto;
      border-radius: 4px;
      margin-right: 1rem;
    }

    .order-card h2 {
      font-size: 18px;
      color: #333;
      margin: 0;
    }

    .order-card p {
      font-size: 14px;
      color: #666;
      margin: 0;
    }

    .order-status {
      background-color: yellow;
      padding: 5px 10px;
      border-radius: 4px;
      font-weight: bold;
      margin-top: 0.5rem;
    }
  </style>
</head>
<body>
  <%- include('navbar.ejs') %>

  <div class="container">
    <h2>Daftar Pesanan</h2>
    <% if (orders.length > 0) { %>
      <% orders.forEach(order => { %>
        <div class="order-card">
          <img src="<%= order.image %>" alt="<%= order.name %>">
          <div>
            <h2><%= order.name %></h2>
            <p>Jumlah: <%= order.quantity %></p>
            <p>Harga: Rp <%= order.price.toLocaleString() %></p>
            <div class="order-status">Dalam pesanan</div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>Tidak ada pesanan.</p>
    <% } %>
  </div>
</body>
</html>
